<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="classic-models">
        <provider>
            org.hibernate.jpa.HibernatePersistenceProvider
        </provider>
        <class>com.example.demo2.entities.Office</class>
        <class>com.example.demo2.entities.Customer</class>
        <class>com.example.demo2.entities.Employee</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"></property>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="147258369"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/classicmodels"></property>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"></property>
        </properties>
    </persistence-unit>
</persistence>
